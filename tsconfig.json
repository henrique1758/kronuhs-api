{
  "compilerOptions": {
    "target": "es2020",                     
    "module": "commonjs",
    "allowJs": true,
    "rootDir": "./src",                       
    "outDir": "./dist",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true, 
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                     
    "skipLibCheck": true,                 
  },
  "include": [
    "src/**/*"
  ]
}